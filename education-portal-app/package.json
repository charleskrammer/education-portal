{
  "name": "ai-training-portal",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=24.13.1",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "next dev -p 8080",
    "build": "next build",
    "vercel-build": "prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "lint:yaml": "yamllint -c .yamllint .github/ docker-compose.yml .yamllint",
    "test": "pnpm run test:backend && pnpm run test:frontend",
    "test:backend": "jest --config jest.config.backend.js --coverage",
    "test:frontend": "jest --config jest.config.frontend.js --coverage",
    "test:coverage:backend": "jest --config jest.config.backend.js --coverage --coverageReporters=text --coverageReporters=lcov",
    "test:coverage:frontend": "jest --config jest.config.frontend.js --coverage --coverageReporters=text --coverageReporters=lcov",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "next": "14.2.35",
    "next-auth": "^4.24.13",
    "prisma": "^6.19.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "@types/react": "18.2.73",
    "@types/react-dom": "18.2.22",
    "autoprefixer": "10.4.19",
    "dotenv": "^17.3.1",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.35",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "8.4.39",
    "tailwindcss": "3.4.7",
    "ts-node": "^10.9.2",
    "typescript": "5.4.5"
  }
}
